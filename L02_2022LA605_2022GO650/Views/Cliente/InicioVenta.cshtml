@model L02P02_2022LA605_2022GO650.Models.clientes

<h2>Iniciar Venta</h2>

<form asp-action="InicioVenta" method="post">
    <div class="form-group">
        <label asp-for="nombre"></label>
        <input asp-for="nombre" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="apellido"></label>
        <input asp-for="apellido" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="email"></label>
        <input asp-for="email" type="email" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="direccion"></label>
        <input asp-for="direccion" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Iniciar Venta</button>
</form>
