@model L02P02_2022LA605_2022GO650.Models.clientes

@{
    ViewData["Title"] = "Venta de Libros";
}

<div class="container mt-5">
    <div class="parte-superior text-center">
        <img class="imagen_logo" src="https://i.ibb.co/k6JR95vP/UNICAES-Logo.png" alt="UNICAES-Logo">
        <h2 class="mt-3">Venta de Libros</h2>
    </div>

    <div class="card mt-4">
        <div class="card-body">
            <h3 class="text-center">Proceso de venta</h3>
            <h5 class="text-center text-muted">Datos del Cliente</h5>

            <form asp-action="InicioVenta" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="nombre"></label>
                            <input asp-for="nombre" class="form-control" required />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="apellido"></label>
                            <input asp-for="apellido" class="form-control" required />
                        </div>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="email"></label>
                    <input asp-for="email" type="email" class="form-control" required />
                </div>

                <div class="form-group mt-3">
                    <label asp-for="direccion"></label>
                    <input asp-for="direccion" class="form-control" required />
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success btn-lg w-100">Iniciar Venta</button>
                </div>
            </form>
        </div>
    </div>

    <footer class="footer" text-center mt-5 text-muted">
        <p>2022-LA-605 - Kathya Michelle Leal Alvarenga</p>
        <p>2022-GO-650 - Katherine Eunice Gutiérrez Orellana</p>
    </footer>
</div>
